{
  "name": "post",
  "icon_name": "rss_feed",
  "schema": {
    "type": "object",
    "properties": {
      "content": {
        "type": "intersection",
        "schemas": [
          {
            "type": "union",
            "schemas": [
              {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "min_length": 1,
                    "max_length": 500,
                    "description": "Text content of the post."
                  },
                  "text_facets": {
                    "type": "array",
                    "optional": true,
                    "description": "Enrich the text content.",
                    "items": {
                      "type": "intersection",
                      "schemas": [
                        {
                          "type": "object",
                          "properties": {
                            "index": {
                              "type": "int",
                              "min": 0,
                              "description": "Start position of the facet in Unicode code points."
                            },
                            "length": {
                              "type": "int",
                              "min": 1,
                              "description": "Length of the facet in Unicode code points."
                            }
                          }
                        },
                        {
                          "type": "union",
                          "schemas": [
                            {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string",
                                  "enum": [
                                    "mention"
                                  ]
                                },
                                "mention": {
                                  "type": "entity_link",
                                  "min_permissions": [
                                    "read",
                                    "notify"
                                  ],
                                  "description": "Mentioned entity."
                                }
                              }
                            },
                            {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string",
                                  "enum": [
                                    "web_link"
                                  ]
                                },
                                "url": {
                                  "type": "string",
                                  "min_length": 1,
                                  "max_length": 2048,
                                  "description": "URL of the web link."
                                }
                              }
                            }
                          ]
                        }
                      ]
                    }
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "media": {
                    "type": "union",
                    "schemas": [
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "tag_link",
                            "enum": [
                              "web_link"
                            ]
                          },
                          "url": {
                            "type": "string",
                            "min_length": 1,
                            "max_length": 2048,
                            "description": "URL of the web link."
                          },
                          "title": {
                            "type": "string",
                            "min_length": 1,
                            "max_length": 70
                          },
                          "description": {
                            "type": "string",
                            "optional": true,
                            "min_length": 1,
                            "max_length": 200
                          },
                          "thumbnail": {
                            "type": "object",
                            "optional": true,
                            "properties": {
                              "image": {
                                "type": "blob_link",
                                "max_size": 81920,
                                "content_types": [
                                  "image/jpeg"
                                ]
                              },
                              "alt": {
                                "type": "string",
                                "optional": true,
                                "min_length": 1,
                                "max_length": 125
                              }
                            }
                          }
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "tag_link",
                            "enum": [
                              "images"
                            ]
                          },
                          "images": {
                            "type": "array",
                            "min_items": 1,
                            "max_items": 4,
                            "items": {
                              "type": "object",
                              "properties": {
                                "small": {
                                  "type": "blob_link",
                                  "max_size": 81920,
                                  "content_types": [
                                    "image/jpeg"
                                  ]
                                },
                                "medium": {
                                  "type": "blob_link",
                                  "max_size": 614400,
                                  "content_types": [
                                    "image/jpeg"
                                  ]
                                },
                                "large": {
                                  "type": "blob_link",
                                  "max_size": 2097152,
                                  "content_types": [
                                    "image/jpeg"
                                  ]
                                },
                                "width": {
                                  "type": "int",
                                  "min": 1
                                },
                                "height": {
                                  "type": "int",
                                  "min": 1
                                },
                                "alt": {
                                  "type": "string",
                                  "optional": true,
                                  "min_length": 1,
                                  "max_length": 125
                                },
                                "mentions": {
                                  "type": "array",
                                  "optional": true,
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "mention": {
                                        "type": "entity_link",
                                        "min_permissions": [
                                          "read"
                                        ]
                                      },
                                      "position": {
                                        "type": "object",
                                        "properties": {
                                          "x": {
                                            "type": "int",
                                            "min": 0
                                          },
                                          "y": {
                                            "type": "int",
                                            "min": 0
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    ]
                  }
                }
              }
            ]
          },
          {
            "type": "union",
            "strict": true,
            "schemas": [
              {
                "type": "object",
                "properties": {
                  "reply_to_post": {
                    "type": "record_link",
                    "optional": true,
                    "record_types": [
                      {
                        "entity": "{var:entity}",
                        "record_id": "{var:record_id}"
                      }
                    ],
                    "description": "Other post this replies to."
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "quote_post": {
                    "type": "record_link",
                    "optional": true,
                    "record_types": [
                      {
                        "entity": "{var:entity}",
                        "record_id": "{var:record_id}"
                      }
                    ],
                    "description": "Other post this quotes."
                  }
                }
              }
            ]
          }
        ]
      },
      "permissions": {
        "type": "object",
        "properties": {
          "read": {
            "type": "tag_link",
            "enum": [
              "public"
            ]
          }
        }
      }
    }
  }
}
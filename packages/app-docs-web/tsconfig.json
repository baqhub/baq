{
  "extends": [
    "../../tsconfig.base"
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js",
    "tailwind.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../lib-sdk"
    },
    {
      "path": "../lib-sdk-react"
    },
    {
      "path": "../lib-ui"
    }
  ]
}